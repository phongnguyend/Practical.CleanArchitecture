@using ClassifiedAds.Domain.Entities;
@model IEnumerable<User>

<a asp-action="Profile" class="btn btn-outline-primary mb-3 mt-3"><span class="oi oi-plus"></span> Add User</a>

<div class="row">
    <div class="col-12">
        @*@await Html.PartialAsync("Common/Search", new Search() { Action = "Users", Controller = "Identity" })*@
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        <th>User Id</th>
                        <th>User Name</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <a class="btn btn-primary" asp-action="Profile" asp-route-id="@user.Id">Edit</a>
                            </td>
                            <td class="align-middle">
                                <img-gravatar email="@user.Email" class="gravatar-image img-thumbnail" />
                            </td>
                            <td class="align-middle">@user.Id</td>
                            <td class="align-middle">@user.UserName</td>
                            <td class="align-middle">@user.Email</td>
                            <td class="align-middle">
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@user.Id"><span class="oi oi-x"></span></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        @*@await Html.PartialAsync("Common/Pager", new Pager { Action = "Users", PageSize = Model.PageSize, TotalCount = Model.TotalCount, EnableSearch = true, Search = ViewBag.Search })*@
    </div>
</div>