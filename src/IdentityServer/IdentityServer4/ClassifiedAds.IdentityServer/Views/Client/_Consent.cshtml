@using ClassifiedAds.IdentityServer.Models.ClientModels
@model ClientModel

<div class="card mt-3">
    <h5 class="card-header">Consent</h5>
    <div class="card-body">
        <!--Checkbox-->
        <div class="form-group row">
            <label asp-for="RequireConsent" class="col-sm-3 col-form-label">
                @await Html.PartialAsync("_Label", "Require Consent")
            </label>
            <div class="col-sm-9">
                <toggle-button>
                    <input asp-for="RequireConsent" type="checkbox">
                </toggle-button>
            </div>
        </div>

        <!--Checkbox-->
        <div class="form-group row">
            <label asp-for="AllowRememberConsent" class="col-sm-3 col-form-label">
                @await Html.PartialAsync("_Label", "Allow Remember Consent")
            </label>
            <div class="col-sm-9">
                <toggle-button>
                    <input asp-for="AllowRememberConsent" type="checkbox">
                </toggle-button>
            </div>
        </div>

        <!--Input - text -->
        <div class="form-group row">
            <label asp-for="ClientUri" class="col-sm-3 col-form-label">
                @await Html.PartialAsync("_Label", "Client Uri")
            </label>
            <div class="col-sm-9">
                <input type="text" class="form-control" asp-for="ClientUri">
            </div>
        </div>

        <!--Input - text -->
        <div class="form-group row">
            <label asp-for="LogoUri" class="col-sm-3 col-form-label">
                @await Html.PartialAsync("_Label", "Logo Uri")
            </label>
            <div class="col-sm-9">
                <input type="text" class="form-control" asp-for="LogoUri">
            </div>
        </div>
    </div>
</div>